# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  tests_config = debug
  tests_no_popcount_config = debug

else ifeq ($(config),release)
  tests_config = release
  tests_no_popcount_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := tests tests-no-popcount

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

tests:
ifneq (,$(tests_config))
	@echo "==== Building tests ($(tests_config)) ===="
	@${MAKE} --no-print-directory -C . -f tests.make config=$(tests_config)
endif

tests-no-popcount:
ifneq (,$(tests_no_popcount_config))
	@echo "==== Building tests-no-popcount ($(tests_no_popcount_config)) ===="
	@${MAKE} --no-print-directory -C . -f tests-no-popcount.make config=$(tests_no_popcount_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f tests.make clean
	@${MAKE} --no-print-directory -C . -f tests-no-popcount.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   tests"
	@echo "   tests-no-popcount"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"